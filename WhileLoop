using namespace std;
#include <iostream>

int main() {
    
    int secretNum = 3;
    int guess;
    int guessCount = 0;
    int guessLimit = 3;
    bool noMoreGuesses = false;
    
    
    while(secretNum != guess && !noMoreGuesses){
        if(guessCount < guessLimit) {
        cout << "Enter a guess: ";
        cin >> guess;
        guessCount++; }
    else {
        noMoreGuesses = true;
    }
}

if(noMoreGuesses) {
    cout << "You Lose!" << endl; }
    else {
        cout << "You Win!" << endl;
    
}
}
